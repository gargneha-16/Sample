<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_spaces_in_version</fullName>
    <active>true</active>
    <description>Make sure no spaces are there in version field</description>
    <errorConditionFormula>CONTAINS(Version__c,&quot; &quot;)</errorConditionFormula>
    <errorDisplayField>Version__c</errorDisplayField>
    <errorMessage>please dont include spaces in version field</errorMessage>
</ValidationRule>
